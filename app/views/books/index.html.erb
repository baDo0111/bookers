<main>
<h1>Books</h1>
<p>現在の投稿数は<%= @books.count %>です。</p>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", book_path(book), class: "show_#{book.id}" %>
        <%= link_to "Edit", edit_book_path(book), class: "edit_#{book.id}" %>
        <%= link_to "Destroy", book_path(book), method: :delete,data:{
          confirm:"削除してもいい？"}, class: "destroy_#{book.id}" %>
      </td>
    </tr>
  <% end %>
</table>

<h1>New Book</h1>
<% if @book.errors.any? %>
    <div class = "alert alert-warning">
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>
<%= form_for(@book) do |t| %>
  <h4 class="form_field">Title</h4>
  <%= t.text_field :title, class: "book_title" %>
  <h4 class="form_field">Body</h4>
  <%= t.text_area :body, class: "book_body" %>
  <p><%= t.submit 'Create Book'%></p>
<% end %>
</main>