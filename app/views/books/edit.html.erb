<body>
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
  <div class="field">Title</div>
  <% if @book.errors.any? %>
    <div class = "alert_alert-warning">
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>
  <%= f.text_field :title, class: "book_title"%>
  <div class="field">Body</div>
  <%= f.text_area :body, class: "book_body" %>
  <div class="actions"><%= f.submit 'Update it'%></div>

  <a class="Show" href="/books">Show</a>
  |
  <a class="Back" href="/books">Back</a>

<% end %>
</body>