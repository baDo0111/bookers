<main>
<h1>Edit Post</h1>
<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <% if @book.errors.any? %>
    <div class = "alert alert-warning">
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>
  <%= f.text_field :title, class: "book_title"%>
  <h4>Body</h4>
  <%= f.text_area :body, class: "book_body" %>
  <p><%= f.submit 'Update it'%></p>

  <%= link_to "Show", book_path(@book), class: "show_#{@book.id}" %>
  |
  <%= link_to "Back", books_path, class: "back" %>

<% end %>
</main>